<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/scrollView2" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center_vertical|center_horizontal">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/backTest"
                    android:text="@string/BACK_TEST" />

                <Button
                    android:id="@+id/Cozinha"
                    android:text="@string/Cozinha" />
                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/Button03"
                    android:text="@string/Escritorio" />

                <Button
                    android:id="@+id/Button02"
                    android:text="@string/SalaJ" />

                

                

            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/Button04"
                    android:text="@string/Quarto" />
                
                <Button
                    android:id="@+id/Sala"
                    android:text="@string/Hall" />
            </TableRow>  
            
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            
            	<Button
                    android:id="@+id/Button05"
                    android:text="@string/Sala" />
            	
            	<Button
                    android:id="@+id/Button01"
                    android:text="@string/Historico" />
            </TableRow>
        </TableLayout>

    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000E"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Not1"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onNotfClick"
                android:text="@string/Notificacao1"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/Not2"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onNotfClick"
                android:text="@string/Notificacao2"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/Not3"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onNotfClick"
                android:text="@string/Notificacao3"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/Not4"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onNotfClick"
                android:text="@string/Notificacao4"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/Not5"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onNotfClick"
                android:text="@string/Notificacao5"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/Not6"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onNotfClick"
                android:text="@string/Notificacao6"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>